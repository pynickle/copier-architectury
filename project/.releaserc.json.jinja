{
  "branches": [
    "master"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Features" },
            { "type": "fix", "section": "üêõ Bug Fixes" },
            { "type": "docs", "section": "üìö Documentation" },
            { "type": "style", "section": "üíÑ Style Improvements" },
            { "type": "ref", "section": "‚ôªÔ∏è Code Refactoring" },
            { "type": "perf", "section": "‚ö° Performance Improvements" },
            { "type": "test", "section": "‚úÖ Tests" },
            { "type": "build", "section": "üì¶ Build System" },
            { "type": "ci", "section": "üë∑ CI/CD" },
            { "type": "chore", "section": "üîß Miscellaneous Changes" },
            { "type": "imp", "section": "üöÄ Improvements" }
          ]
        },
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./gradlew :fabric:build -Pmod_version=${nextRelease.version} && ./gradlew :neoforge:build -Pmod_version=${nextRelease.version}"
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "semantic-release-minecraft",
      {
        "game_versions": "1.21.1",
        "mod_loaders": "${ loader }",
        "display_name": "[${ name } 1.21.1] ${ nextRelease.version }",
        "glob": "${ loader }/build/libs/{{ mod_id }}-${ loader }-${ nextRelease.version }.jar",
        "strategies": [
          {
            "loader": "fabric",
            "name": "Fabric"
          },
          {
            "loader": "neoforge",
            "name": "NeoForge"
          }
        ],
        "curseforge": {
          "project_id": "",   // Add your CurseForge project ID here
          "java_versions": 21,
          "environments": [
            {%- for env in environments if env -%}
            "{{ env }}"{% if not loop.last %}, {% endif %}
            {%- endfor -%}
          ]
        },
        "modrinth": {
          "project_id": "",   // Add your Modrinth project ID here
          "version_number": "${ nextRelease.version }+${ loader }"
        }
      }
    ]
  ],
  "preset": "conventionalcommits",
  "releaseRules": [
    {
      "type": "ref",
      "release": "patch"
    },
    {
      "type": "style",
      "release": "patch"
    },
    {
      "type": "imp",
      "release": "patch"
    }
  ]
}