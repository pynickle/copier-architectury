{
  "schemaVersion": 1,
  "id": "{{ mod_id }}",
  "version": "${version}",
  "name": "{{ mod_name }}",
  "description": "{{ mod_description }}",
  "authors": [
    {%- for author in authors.splitlines() if author | trim -%}
    "{{ author | trim }}"{% if not loop.last %},  {% endif %}
    {%- endfor -%}
  ],
  "contact": {
    "homepage": ""
  },
  "license": "MIT",
  "icon": "assets/{{ mod_id }}/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "{{ organization_domain }}.{{ mod_id }}.fabric.{{ main_class }}Fabric"
    ],
    "client": [
      "{{ organization_domain }}.{{ mod_id }}.fabric.client.{{ main_class }}FabricClient"
    ]
  },
  "mixins": [
    "{{mod_id}}.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.18.1",
    "minecraft": "~1.21.1",
    "java": ">=21",
    "architectury": ">=13.0.8"{% if use_fabric_api %},
    "fabric-api": "*"{% endif %}
  },
  "suggests": {
    "another-mod": "*"
  }
}
